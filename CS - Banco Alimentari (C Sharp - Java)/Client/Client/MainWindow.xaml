<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblTitolo" Content="CASSA" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="36"/>
        <Button x:Name="btnCassiereA" Content="Cassiere A" HorizontalAlignment="Left" Margin="40,200,0,0" VerticalAlignment="Top" FontSize="48" Click="btnCassiereA_Click"/>
        <Button x:Name="btnCassiereB" Content="Cassiere B" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Margin="0,200,0,0" Click="btnCassiereB_Click"/>
        <Button x:Name="btnCassiereC" Content="Cassiere C" HorizontalAlignment="Left" Margin="535,200,0,0" VerticalAlignment="Top" FontSize="48" Click="btnCassiereC_Click"/>
        <Label x:Name="lblSeleziona" Content="Seleziona il tuo utente" HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top" FontSize="30"/>

    </Grid>
</Window>
